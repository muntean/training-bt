<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="price" readonly="state != False"/>
                        <field name="partner_id" widget="many2one" readonly="state != False"/>
                        <field name="validity" readonly="state != False"/>
                    </group>
                    <group>
                        <field name="state" readonly="1"/>
                        <field name="property_id" widget="many2one" readonly="1"/>
                        <field name="date_deadline" readonly="1"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state in ['refused']" decoration-success="state in ['accepted']">
                <field name="price"/>
                <field name="partner_id" widget="many2one"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" type="object" icon="fa-check" invisible="bool(state)"/>
                <button name="action_refuse" type="object" icon="fa-times" invisible="bool(state)"/>
                <field name="state" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="estate_offer_model_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a Property Offers
          </p>
        </field>
    </record>
</odoo>
