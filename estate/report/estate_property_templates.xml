<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_estate_property_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="property">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-call="estate.report_property_template"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_property_template">
        <div name="property_details">
            <h2>
                <span t-field="property.name"/>
            </h2>
            <div>
                <strong>Salesman: </strong>
                <span t-field="property.user_id"/>
            </div>
            <div>
                <strong>Expected Price: </strong>
                <span t-field="property.expected_price"/>
            </div>
            <div>
                <strong>Status: </strong>
                <span t-field="property.state"/>
            </div>
        </div>
        <t t-if="property.offer_ids">
            <t t-call="estate.report_property_offers_template"/>
        </t>
        <t t-else="">
            <strong>No offers have been made yet :(</strong>
        </t>
    </template>

    <template id="report_property_offers_template">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity (days)</th>
                    <th>Deadline</th>
                    <th>State</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.partner_id"/>
                    </td>
                    <td>
                        <span t-field="offer.validity"/>
                    </td>
                    <td>
                        <span t-field="offer.date_deadline"/>
                    </td>
                    <td>
                        <span t-field="offer.state"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>

    <template id="report_user_properties_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="user">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-if="user.property_ids">
                            <t t-set="properties" t-value="user.mapped('property_ids')"/>
                            <t t-foreach="properties" t-as="property">
                                <t t-call="estate.report_property_template"/>
                            </t>
                        </t>
                        <t t-else="">
                            <strong>No properties for this user!</strong>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>